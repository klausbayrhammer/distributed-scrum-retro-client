.card
  overflow auto
  padding 20px
  background-color white
  border-radius 2px
  line-height 1.6
  box-shadow 0 2px 4px rgba(black,0.12), 0 1px 2px rgba(black,0.24)
  transition box-shadow 0.3s animationCurve

  &__title
    font-size 16px
    cursor text
    margin-left offset=-5px
    padding-left -(offset)
    transition background 0.4s animationCurve
    &--active, &:hover
      background rgba(lightGrey, 0.3)

  &--created-by-me
    background-color warmGrey


.board--interactive
  .card
    cursor move
    &:hover
      box-shadow: 0 10px 28px rgba(black,0.25), 0 6px 10px rgba(black,0.22)
